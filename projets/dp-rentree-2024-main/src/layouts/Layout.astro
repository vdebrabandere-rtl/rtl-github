---
interface Props {
  title: string;
}
const baseUrl = import.meta.env.BASE_URL;

const fontFace = `
  @font-face {
    font-family: 'Gilroy';
    src: url('${baseUrl}assets/fonts/gilroy-extrabold-webfont.woff2') format('woff2'),
         url('${baseUrl}assets/fonts/gilroy-extrabold-webfont.woff') format('woff');
    font-weight: 800;
    font-style: normal;
  }
  @font-face {
    font-family: 'Gilroy';
    src: url('${baseUrl}assets/fonts/gilroy-semibold-webfont.woff2') format('woff2'),
         url('${baseUrl}assets/fonts/gilroy-semibold-webfont.woff') format('woff');
    font-weight: 600;
    font-style: normal;
  }
  @font-face {
    font-family: 'Gilroy';
    src: url('${baseUrl}assets/fonts/gilroy-medium-webfont.woff2') format('woff2'),
         url('${baseUrl}assets/fonts/gilroy-medium-webfont.woff') format('woff');
    font-weight: 500;
    font-style: normal;
  }
  @font-face {
    font-family: 'Gilroy';
    src: url('${baseUrl}assets/fonts/gilroy-regular-webfont.woff2') format('woff2'),
         url('${baseUrl}assets/fonts/gilroy-regular-webfont.woff') format('woff');
    font-weight: 400;
    font-style: normal;
  }
`;

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href=`${baseUrl}favicon.svg` />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style set:html={fontFace}></style> 
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>

html{
  scroll-behavior: smooth;
}

body {
    background-color: var(--color-white);

    font-family: var(--font-family);

    color: var(--color-dark-500);

    -webkit-font-smoothing: antialiased;
    margin: 0;
    padding: 0;

    overflow-x: clip;
  }

  button {
    cursor: pointer;

    border: none;
    background-color: transparent;
  }

  .l-container {
    margin: 0 auto;
    padding: 1rem;
    max-width: 1440px;

    width: 100%;

    box-sizing: border-box;
  }
</style>